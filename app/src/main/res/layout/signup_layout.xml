<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="textEnd"
    tools:context=".SignupActivity">

    <!-- Vector di atas -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:importantForAccessibility="no"
        android:src="@drawable/vector_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_alignParentStart="true"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/titleCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollable_section"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        app:layout_constraintTop_toBottomOf="@id/titleCreateAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_below="@id/titleCreateAccount"
            android:layout_marginHorizontal="@dimen/padding_normal"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/titleCreateAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <EditText
                android:id="@+id/fullNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/full_name_signup"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/username_signup"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/businessname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/business_name"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/businesstype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/business_type"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/phone_number_signup"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/phonebusinessinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/business_number"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/email_signup"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/password_signup"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/passwordConfirmationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/password_confirmation"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/addressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins_extralight"
                android:hint="@string/address_signup"
                android:importantForAutofill="no"
                android:inputType="textPostalAddress"
                android:textColorHint="@color/light_blue"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="@dimen/padding_big"
        android:layout_marginTop="430dp"
        android:background="@drawable/button_background"
        android:enabled="false"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/orSignupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/padding_normal"
        android:text="@string/or_signup_using_social_media"
        android:textColor="@color/light_blue"
        android:fontFamily="@font/poppins_light"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/signupbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_verysmall"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/orSignupText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!-- Ikon Facebook -->
        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/facebook"
            android:text="@string/facebook"
            android:background="@drawable/button_ripple"
            android:padding="4dp" />

        <!-- Ikon Twitter -->
        <ImageButton
            android:id="@+id/twitterButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:importantForAccessibility="no"
            android:src="@drawable/twitter"
            android:text="@string/twitter"
            android:background="@drawable/button_ripple"
            android:padding="4dp" />

        <!-- Ikon Google -->
        <ImageButton
            android:id="@+id/googleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:importantForAccessibility="no"
            android:src="@drawable/google"
            android:background="@drawable/button_ripple"
            android:padding="0dp"
            android:scaleType="centerInside" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
