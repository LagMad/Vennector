<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    android:background="@drawable/navigation_bar_background"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home_before" />

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/home_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/union_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_chat"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/chat_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chat_before" />

        <TextView
            android:id="@+id/chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/chat_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/union_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_shop"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/shop_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/shop_before" />

        <TextView
            android:id="@+id/shop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/shop_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/union_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/user_before" />

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/profile_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/union_arrow"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
